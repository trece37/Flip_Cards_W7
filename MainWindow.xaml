<Window x:Class="Flip_Cards_W7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flip_Cards-W7" 
        Width="1200" Height="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    
    <Border Background="#000000" BorderBrush="#7FFF00" BorderThickness="2" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="#7FFF00" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#0A0A0A" BorderBrush="#7FFF00" BorderThickness="0,0,0,1" Padding="20,15">
                <Grid>
                    <TextBlock Text="FLIP_CARDS-W7" FontSize="24" FontWeight="Bold" Foreground="#7FFF00" 
                               HorizontalAlignment="Left" FontFamily="Consolas"/>
                    <TextBlock Text="ESC para salir  |  ← → para navegar  |  ENTER para seleccionar" 
                               FontSize="12" Foreground="#B0B0B0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- 3D Viewport -->
            <Viewport3D Grid.Row="1" x:Name="MainViewport">
                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name="Camera" Position="0,0,10" LookDirection="0,0,-1" 
                                       UpDirection="0,1,0" FieldOfView="60"/>
                </Viewport3D.Camera>
                
                <!-- Lights -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#7FFF00"/>
                            <DirectionalLight Color="White" Direction="0,0,-1"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                
                <!-- Windows will be added dynamically -->
            </Viewport3D>
            
            <!-- Footer -->
            <Border Grid.Row="2" Background="#0A0A0A" BorderBrush="#7FFF00" BorderThickness="0,1,0,0" Padding="20,10">
                <Grid>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Run Text="Ventana actual: " Foreground="#B0B0B0"/>
                        <Run x:Name="CurrentWindowText" Text="Sin ventanas" Foreground="#7FFF00" FontWeight="Bold"/>
                    </TextBlock>
                    <TextBlock Text="Powered by Trece37 &amp; Perply" FontSize="11" Foreground="#7FFF00" 
                               HorizontalAlignment="Right" VerticalAlignment="Center" Opacity="0.7"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
